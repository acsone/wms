<odoo>
    <record model="ir.ui.view" id="stock_picking_batch_form_view">
        <field
            name="name"
        >stock.picking.batch.form (in stock_picking_batch_creation)</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="picking_device_id" />
                <field name="batch_weight" />
                <field name="batch_volume" />
                <field name="batch_nbr_bins" />
                <field name="batch_nbr_lines" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_picking_tree_batch_view">
        <field
            name="name"
        >stock.picking.tree.batch (in stock_picking_batch_creation)</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_picking_batch.view_picking_tree_batch" />
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="picking_device_id" />
                <field name="user_id" />
                <field name="total_weight_batch_picking" />
                <field name="total_volume_batch_picking" />
                <field name="nbr_bins_batch_picking" />
                <field name="nbr_picking_lines" />
            </field>
        </field>
    </record>
</odoo>
