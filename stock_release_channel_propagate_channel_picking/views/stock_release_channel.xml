<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="stock_release_channel_form_view">
        <field
            name="name"
        >stock.release.channel.form (in stock_release_channel_propagate_channel_picking)</field>
        <field name="model">stock.release.channel</field>
        <field
            name="inherit_id"
            ref="stock_release_channel.stock_release_channel_form_view"
        />
        <field name="arch" type="xml">
            <field name="release_forbidden" position="after">
                <field name="propagate_to_pickings_chain" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_release_channel_search_view">
        <field
            name="name"
        >stock.release.channel.search (in stock_release_channel_propagate_channel_picking)</field>
        <field name="model">stock.release.channel</field>
        <field
            name="inherit_id"
            ref="stock_release_channel.stock_release_channel_search_view"
        />
        <field name="arch" type="xml">
            <filter name="warehouse_group" position="after">
                <separator />
                <filter
                    name="propagate_pickings"
                    string="Propagate to Pickings"
                    domain="[('propagate_to_pickings_chain','=',True)]"
                />
            </filter>
        </field>
    </record>

</odoo>
